<h1 class='page-title'>Sign petition</h1>
<h2 class='page-subtitle'><%= @petition.title %></h2>

<%= render 'signatures/form', f: f, signature: signature, context: 'sign' %>

<%= form_row do %>
  <%= f.button 'Sign this petition', :name => 'move', :value => 'next', :class => 'button', :tabindex => increment %>
<% end %>

<section class="signature-terms">
  <p>We won't publish your personal details anywhere or use them for anything other than this petiton.</p>
  <p>We will email you about this petition, and nothing else.</p>
</section>
