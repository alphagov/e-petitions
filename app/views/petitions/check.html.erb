<% content_for(:page_title) { "Start a petition - Petitions" } %>
<h1 class="page-title">Start a petition</h1>

<form method="get" action="/petitions/check_results">
  <div class="form-group">
    <label for="q" class="form-label">
      Action
      <span class="form-hint">What do you want the government to do?</span>
    </label>
    <textarea name="q" id="q" value="<%= @petitions.try(:query) %>" class="form-control" rows="3" maxlength="80"></textarea>
    <span class="form-hint">Example: End non-stun slaughter in slaughterhouses</span>
    <span class="character-count">80</span>
    <%= render 'petitions/action_help' %>
  </div>

  <section class="create-warning">
    <h2>Just so you know</h2>
    <span aria-hidden="true">5</span>
    <p>Later on, you'll need email addresses for <%= Site.minimum_number_of_sponsors %> supporters to get your petition started</p>
  </section>

  <input type="submit" value="Check for similar petitions" class="button" />
</form>
