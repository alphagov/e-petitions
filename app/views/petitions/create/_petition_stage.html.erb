<%= link_to "Back", check_results_petitions_path(q: petition.action), class: "back-page" %>

<%= form.hidden_field :uk_citizenship %>

<h1 class="page-title">Start a petition</h1>

<p class="petition-standards">We only publish petitions that meet the <%= link_to "petition standards", help_url(anchor: "standards") %>.</p>

<%= render "petitions/create/error_summary", form: form %>

<%= form_row for: [petition, :action] do %>
  <%= form.label :action, class: "form-label" do %>
    What do you want us to do?
    <span class="form-hint">Example: Change the day General Elections are held to Wednesday</span>
  <% end %>
  <%= error_messages_for_field petition, :action %>
  <%= form.text_area :action, rows: 3, data: { max_length: 80 }, class: "form-control" %>
  <p class="character-count">80 characters max</p>
  <details class="form-group-help">
    <summary><span class="summary">Show more examples</span></summary>
    <div class="panel-indent">
      <p>Good examples:</p>
      <ul class="list-bullet">
        <li>Introduce Black History to the primary curriculum</li>
        <li>Lower the voting age to 16</li>
      </ul>
      <p>Bad examples:</p>
      <ul class="list-bullet">
        <li>Russia Problem on US ruling</li>
        <li>Justice for David Thomas</li>
      </ul>
      <p>Good petitions say clearly what they want government or parliament to do.</p>
    </div>
  </details>
<% end %>

<%= form_row for: [petition, :background] do %>
  <%= form.label :background, "Tell us more about what you want the Government or Parliament to do", class: "form-label" %>
  <%= error_messages_for_field petition, :background %>
  <%= form.text_area :background, rows: 5, data: { max_length: 300 }, class: "form-control" %>
  <p class="character-count">300 characters max</p>
  <details class="form-group-help">
    <summary><span class="summary">Help writing background</span></summary>
    <div class="panel-indent">
      <p>Use this section to back up why you want action. Some people include a personal story here.</p>
      <p>Remember that people won’t always know that much about the issue you’re petitioning about - explain it.</p>
    </div>
  </details>
<% end %>

<%= form_row for: [petition, :additional_details] do %>
  <%= form.label :additional_details, "Tell us more about why you want the Government or Parliament to do it", class: "form-label" %>
  <%= error_messages_for_field petition, :additional_details %>
  <%= form.text_area :additional_details, rows: 7, data: { max_length: 500 }, class: "form-control" %>
  <p class="character-count">500 characters max</p>
  <details class="form-group-help">
    <summary><span class="summary">Help writing additional info</span></summary>
    <div class="panel-indent">
      <p>Optional - background information, evidence and references.</p>
    </div>
  </details>
<% end %>

<%= form.button "Preview petition", name: "move_next", class: "button" %>
