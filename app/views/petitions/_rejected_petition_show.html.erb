<%= cache_for :petition do %>
  <h1>
    <span class="heading-secondary"><%= t(:"ui.petitions.heading_rejected") %></span>
    <%= petition.action %>
  </h1>

  <% if @petition.committee_note? %>
    <div class="committee-note">
      <%= markdown_to_html(@petition.committee_note) %>
    </div>
  <% end %>

  <% if petition.background? %>
    <div class="petition-content"><%= apply_formatting(petition, :background) %></div>
  <% end %>
  <% if petition.additional_details? %>
    <details>
      <summary><span class="summary"><%= t(:"ui.petitions.more_details") %></span></summary>
      <div class="petition-content"><%= apply_formatting(petition, :additional_details) %></div>
    </details>
  <% end %>

  <section class="rejection-reason" aria-labelledby="rejection-reason-heading">
    <h2 id="rejection-reason-heading"><%= t(:"ui.petitions.reject_reason_heading") %></h2>
    <%= rejection_description(petition.rejection.code) %>
    <% if petition.rejection.details? %>
      <p><%= markdown_to_html(petition.rejection.details) %></p>
    <% end %>
    <%= t(:"ui.petitions.reject_reason_standards_html", standards_link: petition_standards_link) %>
  </section>

  <ul class="petition-meta">
    <li>
      <span class="label"><%= t(:"ui.petitions.date_submitted") %></span> <%= short_date_format petition.created_at %>
    </li>
    <li class="meta-json">
      <span class="note"><%= link_to t(:"ui.petitions.get_json"), petition_path(petition, :json) %></span>
      <%= t(:"ui.petitions.about_petition_data_html") %>
    </li>
  </ul>
<% end %>
