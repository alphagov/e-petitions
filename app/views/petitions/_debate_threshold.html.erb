<% if debate_outcome = petition.debate_outcome? %>
  <% if debate_outcome.debated? %>
    <%= render "petitions/debate_thresholds/debated", petition: petition, debate_outcome: debate_outcome %>
  <% else %>
    <%= render "petitions/debate_thresholds/not_debated", petition: petition, debate_outcome: debate_outcome %>
  <% end %>
<% elsif petition.scheduled_debate_date? %>
  <%= render "petitions/debate_thresholds/scheduled", petition: petition %>
<% elsif petition.debate_threshold_reached_at? %>
  <%= render "petitions/debate_thresholds/awaiting", petition: petition %>
<% elsif !petition.closed? %>
  <%= render "petitions/debate_thresholds/open", petition: petition %>
<% end %>
