<% if government_response = petition.government_response? -%>
  <%= render "petitions/response_thresholds/response", petition: petition, government_response: government_response %>
<% elsif petition.response_threshold_reached_at? -%>
  <%= render "petitions/response_thresholds/awaiting", petition: petition %>
<% elsif !petition.closed? %>
  <%= render "petitions/response_thresholds/open", petition: petition %>
<% end -%>
