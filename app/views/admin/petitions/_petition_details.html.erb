<dl>
  <dt>Status</dt>
  <dd class="petition-meta-state"><%= @petition.state.capitalize %></dd>

<% if @petition.rejected? or @petition.hidden? -%>
  <dt>Rejection reason</dt>
  <dd><p><%= rejection_reason(@petition.rejection.code) %> </dd>

  <dt>Rejection text</dt>
  <dd><%= @petition.rejection.details %> </dd>
<% end -%>

<% unless @petition.in_todo_list? %>
  <dt>Signatures</dt>
  <dd class="petition-meta-signature-count"><%= number_with_delimiter(@petition.signature_count) %> </dd>
<% end %>

<dt>Creator</dt>
<dd>
  <%=  @petition.creator_signature.name %><br />
  <%= auto_link(@petition.creator_signature.email) %>
</dd>

<% if @petition.in_todo_list? %>
  <dt>Created on</dt>
  <dd><%= date_time_format(@petition.created_at) %></dd>

<% else %>
  <dt>Deadline</dt>
  <dd><%= date_format_admin(@petition.deadline) %></dd>

  <dt>Link to petition</dt>
  <dd><%= link_to nil, petition_url(@petition), target: "_blank" %></dd>

  <dt>ID</dt>
  <dd><%= @petition.id %></dd>

<% end %>
</dl>
